<div class="table-responsive">
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Blocks</th>
                <th>Variance</th>
                <th>Orphan Rate</th>
            </tr>
        </thead>
        <tbody>
        {{#each-in model.luck as |total row|}}
        <tr>
            <td>{{total}}</td>
            <td>{{format-number (format-luck row.luck)}}&#37;</td>
            <td>{{format-number (format-orphanrate row.orphanRate)}}&#37;</td>
        </tr>
        {{/each-in}}
        </tbody>
    </table>
</div>